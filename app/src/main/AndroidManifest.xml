<?xml version="1.0" encoding="utf-8"?>
<manifest package="net.swmud.trog.dspam"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/dspam"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gui.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".gui.HistoryActivity">
        </activity>
        <activity android:name=".gui.DetailsActivity">
        </activity>
        <activity android:name=".gui.SettingsActivity">
        </activity>
    </application>

</manifest>